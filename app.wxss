}

.flex-wrp {
  display: flex;
}

.flex-tab {
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: stretch;
}

.flex-justify {
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: stretch;
}

