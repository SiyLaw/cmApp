/* pages/work/wItems/truck.wxss */

.cust-img {
  margin-right: 10rpx;
  margin-left: 10rpx;
}

.cust-img image {
  width: 40rpx;
  height: 40rpx;
}

.content-fixed-top {
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 182rpx;
}

.sv-content {
  position: fixed;
  top: 182rpx;
  left: 0rpx;
  width: 100%;
  background-color: #f5f5f5;
}

.tabs {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  height: 100rpx;
  width: 100%;
  padding-top: 0rpx;
  background-color: #fff;
  z-index: 20000;
  justify-content: space-around;
  align-items: center;
  font-size: 34rpx;
}

.tabs .item {
  padding: 10rpx 10rpx;
  color: #666;
  border-bottom: 5rpx solid #fff;
}

.tabs image {
  width: 40rpx;
  height: 40rpx;
  border-radius: 100%;
}

.tabs .selecteditem {
  padding: 10rpx 10rpx;
  color: #7587db;
  border-bottom: 5rpx solid #7587db;
}

.cpt-main {
  margin-bottom: 20rpx;
  background-color: #fff;
  border-top: 3rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
}

.cpt-main-item {
  padding-left: 40rpx;
}

.cpt-item {
  border-top: 1rpx solid #ddd;
  padding: 10rpx 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.cpt-img {
  margin: 10rpx 30rpx 15rpx 20rpx;
}

.cpt-img image {
  width: 20rpx;
  height: 20rpx;
  border-radius: 100%;
  box-shadow: 0rpx 0rpx 1rpx 2rpx #ddd;
  border: none;
}

.cpt-opt {
  flex-grow: 1;
  display: flex;
  flex-direction: row;
  align-content: center;
  align-items: center;
  justify-content: flex-end;
  font-size: 50rpx;
  font-weight: bolder;
}

.cpt-opt image {
  width: 50rpx;
  height: 50rpx;
}

.cpt-opt1 {
  flex-grow: 1;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: flex-end;
}

.cpt-opt1 image {
  width: 50rpx;
  height: 50rpx;
}

.cpt-content {
  flex-grow: 2;
}

.cpt-head {
  color: #696969;
  font-size: 30rpx;
  font-weight: bolder;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
}

.cpt-head1 {
  color: #696969;
  font-size: 36rpx;
  font-weight: bolder;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  letter-spacing: 5rpx;
}

.cpt-detail {
  padding: 0rpx 0rpx;
}

.cpt-txt {
  font-size: 26rpx;
  color: #808080;
}
.cpt-txt image {
  width: 45rpx;
  height: 45rpx;
}

.cust-txt{
  padding-left: 50rpx;
  padding-bottom: 5rpx;
}
.txt-border{
  font-weight: bold;
}
.cpt-txt checkbox{
  margin-bottom: 5rpx;
}

.bg-warring{
  background-color:#FFA500;
}

.work-cust {
  background-color: #228b22;
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
  line-height: 100rpx;
  height: 100rpx;
}

.yellow {
  background-color: #ffa500;
}

.cust-red {
  color: red;
  font-weight: bolder;
  padding: 2rpx 5rpx;
  font-size: 30rpx;
}

.title-cust {
  font-size: 32rpx;
  padding: 15rpx 10rpx;
  background-color: #1E90FF;
  color: #eee;
}
