/* pages/news/newslist.wxss */
/* focus.wxss */

page{
  background-color: #f3f3f3;
  text-align: center;
}

.loading{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.loading  image{
  width: 34rpx;
  height: 34rpx;
  border-radius: 100%;
  margin-right: 10rpx; 
  box-shadow: 0 0 1rpx 1rpx #999;
  animation: rotation 1s linear infinite;
  background-color: white;
}

.container {
  background-color: #f3f3f3;
  padding: 0;
  margin: 0;
  width: 100%;
  text-align: left;
}

.swiper {
  width: 100%;
  height: 200rpx;
  letter-spacing: 5rpx;
  background-color: #999;
  font-size: 34rpx;
  margin-bottom: 10rpx;
}

.swiper-item {
  width: 100%;
  height: 200rpx;
  text-align: center;
}

.swiper-shadow {
  position: absolute;
  bottom: -1rpx;
  z-index: 1;
  width: 100%;
  height: 0rpx;
  background-color: #999;
  box-shadow: 0 -20rpx 180rpx 10rpx #444;
}

.swiper-text {
  position: absolute;
  bottom: 40rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  color: #fff;
  text-align: justify;
  font-weight: bolder;
  z-index: 2;
}

.infoItem {
  background-color: #fff;
  border: 1rpx solid #dadada;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 2rpx -1rpx #d0d0d0;
  width: 97%;
  margin: 5rpx auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.itemTitle {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-left: 25rpx;
  font-size: 30rpx;
  color: #777;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.itemTitle .itemTime {
  flex-grow: 0;
  height: 20rpx;
  color: #aaa;
  font-size: 24rpx;
}

.itemImage {
  flex-grow: 0;
  max-width: 90rpx;
  min-width: 90rpx;
  display: flex;
  flex-direction: row;
  justify-self: center;
  align-items: center;
}

.itemImage image {
  height: 80rpx;
  width: 80rpx;
}

/* 菜单框架 */

.lawSub1 {
  text-align: left;
  position: fixed;
  top: 90rpx;
  left: 0;
  background-color: #eee;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  border-right: 1rpx solid #c0c0c0;
  z-index: 9998;
}

/* 单项菜单 */

.Sub1item {
  background-color: #eee;
  display: flex;
  flex-direction: column;
  box-shadow: 0 0 5rpx 0 #bdb76b;
  margin-bottom: 2rpx;
}

/* 一级菜单 */

.itemHead {
  align-items: center;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 6rpx 0;
  color: #444;
  text-shadow: 1px 1px 0 #ddd;
}

/* 一级菜单 标题 */

.itemHead text {
  font-size: 36rpx;
  padding-left: 20rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  flex: auto;
}

.menuSltd {
  background-color: #708090;
  color: #eee;
  text-shadow: 1px 1px 0 #444;
}

@keyframes menu-animation {
  0% {
    transform: translateX(0);
  }

  100% {
    transform: translateX(-105%);
  }
}

@keyframes menu-animation2 {
  0% {
    transform: translateX(-105%);
  }

  100% {
    transform: translateX(0%);
  }
}

.menuhide {
  animation: menu-animation 0.6s ease;
  animation-fill-mode: both;
}

.menushow {
  animation: menu-animation2 0.6s ease;
  animation-fill-mode: both;
}

.loading {
  padding: 10rpx;
  text-align: center;
  font-size: 26rpx;
  color: #777;
}

@keyframes rotation {
  from {
    transform: rotate(0deg);
  }

  to {
    -webkit-transform: rotate(360deg);
  }
}

.buttonslay{
  height: 500rpx;
}
